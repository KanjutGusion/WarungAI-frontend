# ================================
# WarungAI Frontend Environment
# ================================
# Copy file ini ke .env dan sesuaikan nilainya
# cp env.example .env

# ================================
# API Configuration
# ================================
# Base URL untuk backend API
API_BASE_URL=http://localhost:8000/api

# API Timeout (dalam milidetik)
API_TIMEOUT=30000

# ================================
# App Configuration
# ================================
# Environment: development | staging | production
NODE_ENV=development

# Nuxt host dan port
NUXT_HOST=0.0.0.0
NUXT_PORT=3000

# App name (untuk title, meta)
NUXT_PUBLIC_APP_NAME=WarungAI
NUXT_PUBLIC_APP_DESCRIPTION=Platform AI untuk UMKM Indonesia

# ================================
# Authentication
# ================================
# JWT Secret (untuk validasi token di client jika diperlukan)
NUXT_PUBLIC_AUTH_COOKIE_NAME=warungai_token
NUXT_PUBLIC_AUTH_COOKIE_EXPIRES=7

# ================================
# Feature Flags
# ================================
# Enable/disable fitur tertentu
NUXT_PUBLIC_ENABLE_DEVTOOLS=true
NUXT_PUBLIC_ENABLE_ANALYTICS=false
NUXT_PUBLIC_ENABLE_DARK_MODE=true

# ================================
# Third Party Services
# ================================
# Google Analytics
NUXT_PUBLIC_GA_ID=

# Sentry (Error tracking)
NUXT_PUBLIC_SENTRY_DSN=

# ================================
# Upload Configuration
# ================================
# Max file size dalam bytes (5MB = 5242880)
NUXT_PUBLIC_MAX_UPLOAD_SIZE=5242880

# Allowed file types
NUXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ================================
# Pagination
# ================================
# Default items per page
NUXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NUXT_PUBLIC_MAX_PAGE_SIZE=100

# ================================
# Cache
# ================================
# Cache duration dalam detik
NUXT_PUBLIC_CACHE_TTL=300

# ================================
# Social Media Links
# ================================
NUXT_PUBLIC_SOCIAL_INSTAGRAM=
NUXT_PUBLIC_SOCIAL_TWITTER=
NUXT_PUBLIC_SOCIAL_FACEBOOK=
NUXT_PUBLIC_SOCIAL_WHATSAPP=

